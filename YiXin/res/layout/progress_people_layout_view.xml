<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progress_people_total_layout"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/progress_do_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/progress_people_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/progress_people_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/an_user_small_head_img"
        android:scaleType="fitCenter" />
    <TextView
        android:id="@+id/prgress_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:textSize="15dp"
        android:text="张三三"/>
    <LinearLayout
    android:id="@+id/progress_people_star_layout"
    android:layout_marginLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_gravity="center"
    android:gravity="center_vertical"
        android:visibility="gone">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/progress_people_id_one_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/star_small_f"/>

    <ImageView
        android:id="@+id/progress_people_id_two_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/star_small_f"/>

    <ImageView
        android:id="@+id/progress_people_id_thr_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/star_small_f"/>

    <ImageView
        android:id="@+id/progress_people_id_fou_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/star_small_uf"/>

    <ImageView
        android:id="@+id/progress_people_id_fir_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/star_small_uf"/>
</LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/progress_people_bottom_star_layout"
        android:layout_marginLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:visibility="gone">
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1px"-->
            <!--android:layout_weight="1"/>-->

        <ImageView
            android:id="@+id/progress_people_bottom_id_one_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/star_small_f"/>

        <ImageView
            android:id="@+id/progress_people_bottom_id_two_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/star_small_f"/>

        <ImageView
            android:id="@+id/progress_people_bottom_id_thr_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/star_small_f"/>

        <ImageView
            android:id="@+id/progress_people_bottom_id_fou_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/star_small_uf"/>

        <ImageView
            android:id="@+id/progress_people_bottom_id_fir_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/star_small_uf"/>
    </LinearLayout>

</LinearLayout>