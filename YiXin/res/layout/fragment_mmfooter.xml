<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/bottombar_bg">
    
    <ImageButton
        android:id="@+id/btn_mmfooter_listtotext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mmfooter_listtotexticon"
        android:background="@drawable/bottombar_button" />
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:layout_toRightOf="@+id/btn_mmfooter_listtotext"
    	android:layout_alignParentRight="true">
    	<LinearLayout 
    	    android:id="@+id/btn_menu1"
    	    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:padding="3dp"
    		android:clickable="true"
    		android:background="@drawable/bottombar_button">
	        <TextView 
	            android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:text="菜单1"
	    		android:gravity="center"
	    		android:background="@drawable/abc_spinner_ab_holo_light"/>
    	</LinearLayout>
        <LinearLayout 
            android:id="@+id/btn_menu2"
    	    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:padding="3dp"
    		android:clickable="true"
    		android:background="@drawable/bottombar_button">
	        <TextView 
	            android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:gravity="center"
	    		android:text="菜单2"
	    		android:background="@drawable/abc_spinner_ab_holo_light"/>
    	</LinearLayout>
        <LinearLayout 
    	    android:layout_width="0dp"
    		android:layout_height="match_parent"
    		android:layout_weight="1"
    		android:padding="3dp"
    		android:clickable="true"
    		android:background="@drawable/bottombar_button">
	        <TextView 
	            android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:gravity="center"
	    		android:text="功能1"
	    		android:background="@null"/>
    	</LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
