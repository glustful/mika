<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <ImageView 
        android:id="@+id/headImageView"
        android:layout_width="@dimen/normal_large_head"
        android:layout_height="@dimen/normal_large_head"
        android:src="@drawable/an_user_head_large"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView 
            android:id="@+id/topLine"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/approve_process_top"/>

<ListView
    android:id="@android:id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignLeft="@+id/topLine"
    android:layout_centerVertical="true" />

</RelativeLayout>
</LinearLayout>
