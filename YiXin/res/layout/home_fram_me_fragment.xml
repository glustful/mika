<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <RelativeLayout
          android:id="@+id/home_fram_me_top_view"
          android:layout_width="match_parent"
          android:layout_height="180dp"
          android:background="@drawable/an_me_bg" >

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
        <RelativeLayout 
            android:id="@+id/edit_me_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            >
            
                        
        <ImageView 
            android:id="@+id/meRoundBg"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/me_round"/>
            <com.miicaa.base.RoundImage.CircularImage 
                android:id="@+id/home_fram_me_head_view"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/an_user_head_large"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="4dp"
                />
            <TextView 
                android:id="@+id/home_fram_me_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@+id/meRoundBg"
                android:singleLine="true"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"
                />
            
            <ImageButton android:id="@+id/edit_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit_me"
                android:background="@color/transparent"
                android:layout_alignRight="@+id/meRoundBg"
                android:layout_marginRight="-14dp"
                />
             
            </RelativeLayout>

           
            </LinearLayout>
       
          
      </RelativeLayout>
      <LinearLayout 
          android:id="@+id/homeFramMe"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          ></LinearLayout>
