<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottombar_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp" >

        <ImageButton
            android:id="@+id/btn_mmfooter_texttolisticon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottombar_button"
            android:src="@drawable/mmfooter_texttolisticon" />

        <ImageButton
            android:id="@+id/btn_chatting_setmode_voice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btn_mmfooter_texttolisticon"
            android:background="@null"
            android:src="@drawable/chatting_setmode_voice_btn" />

        <EditText
            android:id="@+id/et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="6dp"
            android:layout_toLeftOf="@+id/btn_type_select"
            android:layout_toRightOf="@+id/btn_chatting_setmode_voice"
            android:background="@drawable/input_bar_bg"
            android:maxLines="4"
            android:minHeight="50dp"
            android:paddingRight="50dp" />

        <CheckBox
            android:id="@+id/btn_chatting_biaoqing"
            android:layout_width="24dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/et"
            android:background="@null"
            android:button="@drawable/checkbox_biaoqing" />

        <ImageButton
            android:id="@+id/btn_type_select"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/type_select_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_biaoqing"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bottombar_bg"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择表情/更多功能" />
    </RelativeLayout>

</LinearLayout>