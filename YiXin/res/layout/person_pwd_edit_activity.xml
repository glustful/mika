<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#E6E6E6"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        
        
         <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/an_head_bg"
        android:gravity="top" >
         
            <Button
           
                android:id="@+id/person_pwd_id_back"
                style="@style/back_button"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_nobgd" />
            

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textSize="@dimen/framText"
            android:textColor="#FFFFFF"/>
        
           

            <Button
                android:id="@+id/person_pwd_id_commit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:layout_alignParentRight="true"
                android:textColor="@color/alittle_white"
                android:background="#00000000"
                android:layout_marginRight="5dp" />
            
        
    </RelativeLayout>




    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="请输入原始密码"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="#777777"
                android:textSize="14sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/person_pwd_id_err"
                android:gravity="center_vertical"
                android:paddingLeft="9dp"
                android:background="#FF4343"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:textSize="14dp"/>
    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/person_pwd_id_src"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:text=""
                android:inputType="textPassword"
                android:gravity="center_vertical"
                 android:paddingLeft="@dimen/paddingleft"
        	android:paddingRight="@dimen/paddingright"
            android:background="@drawable/white_icon_selector"
                android:textSize="14sp"/>
    </LinearLayout>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="设置新密码"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#777777"
            android:textSize="14sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/person_pwd_id_new"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:text=""
                android:inputType="textPassword"
                android:gravity="center_vertical"
                 android:paddingLeft="@dimen/paddingleft"
        	android:paddingRight="@dimen/paddingright"
            android:background="@drawable/white_icon_selector"
                android:textSize="14sp"/>
    </LinearLayout>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="重复新密码"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#777777"
            android:textSize="14sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/person_pwd_id_new_repeat"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:text=""
                android:inputType="textPassword"
                android:gravity="center_vertical"
                 android:paddingLeft="@dimen/paddingleft"
        	android:paddingRight="@dimen/paddingright"
            android:background="@drawable/white_icon_selector"
                android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>