<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
   

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/arrage_more_whole_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/arrange_more_id_personnel_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_top_half_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="42dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="办理人和抄送人"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/arrange_more_id_personnel_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:text="X人"
                        android:textColor="#999999"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/an_text_right_next" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arrange_more_id_progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_center_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/arrange_more_id_progress_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所有进展"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/arrange_more_id_progress_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:text="X条"
                        android:textColor="#999999"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/an_text_right_next" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arrange_more_id_attachment_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_center_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="所有附件"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/arrange_more_id_attachment_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:text="X个"
                        android:textColor="#999999"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/an_text_right_next" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arrange_more_id_repeat_rules_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bottom_half_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="24dp"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重复规则"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/arrange_more_id_repeat_rules_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" >
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/arrange_more_change_app_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/arrange_more_changePeople_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_top_half_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="42dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/arrange_more_change_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="修改审批人"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/todoPersonText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:textColor="#999999"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/an_text_right_next" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arrange_more_change_cc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bottom_half_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="42dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/arrange_more_change_cc_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加抄送范围"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/an_text_right_next" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/arrange_more_id_editor_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_top_half_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="44dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编辑"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/an_text_right_next" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arrange_more_id_do_finsh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_center_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="42dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="办结"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/an_text_right_next" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arrange_more_id_termination_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bottom_half_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="终止"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/an_text_right_next" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/guanzhuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_all_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/guanzhuButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textOff="O"
                        android:textOn="I" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/arrange_more_id_do_finsh_secret_button"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/bottom_menu_item_selector"
                        android:text="办结"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/arrange_more_id_approve_finish"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/bottom_menu_item_selector"
                        android:text="办结"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/arrange_more_id_delete"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/bottom_menu_cancel_selector"
                    android:text="删除"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>