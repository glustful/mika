<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checkwork_detaillist_backound"
        android:orientation="vertical"
       >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="冯晶晶 2014-01-28 星期三"
        android:textSize="20sp"
        />
    <LinearLayout 
        android:id="@+id/signInView"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/signInText"
            android:layout_marginLeft="5dp"
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/sign_in"
            android:layout_weight="1"
            android:text="08:54"
            android:gravity="center_vertical"
            android:textColor="@color/checkwork_tongji_bottom_color"
            android:textSize="15sp"/>
        <TextView 
            android:id="@+id/signInWhereText"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/location"
            android:text="东航投资大厦"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/signOutView"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/signOutText"
            android:layout_marginLeft="5dp"
            android:drawablePadding="5dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:drawableLeft="@drawable/sigin_out"
            android:layout_weight="1"
            android:text="08:54"
            android:gravity="center_vertical"
            android:textColor="@color/checkwork_tongji_bottom_color"
            android:textSize="15sp"/>
        <TextView 
            android:id="@+id/signOutWhereText"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/location"
            android:text="东航投资大厦"/>
    </LinearLayout>
</LinearLayout>
