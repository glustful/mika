<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="@drawable/contact_list_search_input"
        android:layout_weight="1">
    <EditText 
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:drawableLeft="@drawable/search_ico"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:textSize="@dimen/search_text_size"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        />
    <ImageButton 
        android:id="@+id/delSearchImgeBtn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:src="@drawable/contact_list_clear_button_selector"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:layout_weight="0"
        android:layout_marginRight="5dp"/>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0">
    
    <Button 
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/search_text"
        android:visibility="gone"
        style="?android:attr/buttonStyleSmall"/>
    
    <ImageButton 
        android:id="@+id/screenImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        style="?android:attr/buttonStyleSmall"
        android:src="@drawable/an_matter_screen"
        android:background="@android:color/transparent"/>
    </RelativeLayout>

</LinearLayout>