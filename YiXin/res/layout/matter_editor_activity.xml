<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
 <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      
            android:background="@drawable/an_head_bg">
        <TextView 
            android:id="@+id/matter_editor_id_title_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新建任务"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
        <Button
                    android:id="@+id/matter_editor_id_back"
                    style="@style/back_button"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000" />
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提交"
            android:textColor="#FFFFFF"/>
            <Button 
                android:id="@+id/matter_editor_id_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                />
        </RelativeLayout>
        
    </RelativeLayout>


    <ScrollView
            android:id="@+id/matter_editor_scrollview"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:id="@+id/matter_editor_whole_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"/>
            <TextView
                android:id="@+id/matter_editor_id_title"
                android:layout_width="80dp"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="标题："
                android:layout_gravity="center_vertical"
                android:textColor="#333333"
                android:paddingLeft="5dp"
                android:textSize="16sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:padding="10dp"
                    android:id="@+id/matter_editor_id_edittitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:maxLength="35"
                    android:gravity="left|top"
                    android:background="@color/white"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <LinearLayout
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <TextView
                    android:id="@+id/matter_editor_biaozhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"
                    android:paddingLeft="5dp"
                    android:visibility="invisible"/>
            <TextView
                android:id="@+id/matter_editor_id_descript"
                android:layout_width="80dp"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="描述："
                android:textColor="#333333"
                android:paddingLeft="5dp"
                android:textSize="16sp"/>
            </LinearLayout>
            <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:padding="10dp"
                        android:id="@+id/matter_editor_id_mono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="#333333"
                        android:gravity="left|top"
                        android:background="@color/white"
                        android:textSize="16sp"/>
            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/matter_editor_id_arrange"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   >

                <LinearLayout
                    android:id="@+id/matter_editor_id_mattor_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_color_selector"
                    android:gravity="center_vertical"
                    android:minHeight="42dp"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/paddingright">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/red"
                            android:paddingLeft="5dp"
                            />
                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="办理人"
                            android:textColor="#333333"
                            android:paddingLeft="5dp"
                            android:textSize="16sp"
                        />
                    </LinearLayout>
                    <TextView
                            android:id="@+id/matter_editor_id_mattor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:drawableRight="@drawable/an_text_right_next"
                            android:textColor="#333333"
                            android:textSize="16sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/paddingleft"
                    android:paddingRight="@dimen/paddingright"
                        android:id="@+id/matter_editor_id_begin_layout"
                        android:background="@drawable/white_color_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:minHeight="40dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="开始时间"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    <TextView
                            android:id="@+id/matter_editor_id_begin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:lines="1"
                            android:textColor="#333333"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                           
                            android:textSize="16sp"
                            
                            />
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/paddingleft"
                    android:paddingRight="@dimen/paddingright"
                        android:id="@+id/matter_editor_id_finish_layout"
                        android:background="@drawable/white_color_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:minHeight="40dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="结束时间"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    <TextView
                            android:id="@+id/matter_editor_id_finish"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:lines="1"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                           
                            android:textColor="#333333"
                            android:textSize="16sp"
                           />
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/paddingleft"
                    android:paddingRight="@dimen/paddingright"
                        android:id="@+id/matter_editor_id_repeat_layout"
                        android:background="@drawable/white_color_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:minHeight="40dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="重复"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    <TextView
                            android:id="@+id/matter_editor_id_repeat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="right|center_vertical"
                            android:drawableRight="@drawable/an_text_right_next"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/paddingleft"
                    android:paddingRight="@dimen/paddingright"
                        android:id="@+id/matter_editor_id_auto_layout"
                        android:background="@drawable/white_color_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:minHeight="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="自动办结"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    <TextView
                            android:id="@+id/matter_editor_id_auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:lines="1"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                           android:textColor="#333333"
                            android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/paddingleft"
                    android:paddingRight="@dimen/paddingright"
                        android:id="@+id/matter_editor_id_rang_layout"
                        android:background="@drawable/white_color_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:minHeight="40dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="公开"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    <TextView
                            android:id="@+id/matter_editor_id_rang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:lines="1"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                           android:textColor="#333333"
                            android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/paddingleft"
                    android:paddingRight="@dimen/paddingright"
                        android:id="@+id/matter_editor_id_cc_layout"
                        android:background="@drawable/white_color_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        android:minHeight="46dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="抄送人"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    <TextView
                            android:id="@+id/matter_editor_id_cc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                             android:gravity="right|center_vertical"
                            android:drawableRight="@drawable/an_text_right_next"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/matter_editor_id_approval"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                
                <com.miicaa.home.ui.matter.approveprocess.ApprovalProcessTypeView_
                    android:id="@+id/approvalProcessTypeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
                
                <Button
                    android:id="@+id/showProcessView"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:gravity="left|center_vertical"
                    android:background="@drawable/white_color_selector"
                    android:drawableRight="@drawable/an_text_right_next"
                    android:layout_marginTop="1dp"
                    android:textSize="@dimen/matter_editor_textsize"
                    android:paddingLeft="5dp"
                    android:text="@string/approve_process"
                    android:drawablePadding="5dp"
                    android:visibility="gone"
                    android:paddingRight="5dp"
                    />
                
                <LinearLayout
                   
                    android:paddingRight="@dimen/paddingright"
                        android:id="@+id/matter_editor_id_assess_layout"
                        android:background="@drawable/white_color_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        android:minHeight="42dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/red"/>
                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="审批人"
                            android:textColor="#333333"
                            android:textSize="16sp"
                        android:paddingLeft="5dp"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/matter_editor_id_assess"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:lines="1"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:drawableRight="@drawable/an_text_right_next"
                           android:textColor="#333333"
                            android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/paddingleft"
                    android:paddingRight="@dimen/paddingright"
                        android:id="@+id/matter_editor_id_approcc_layout"
                        android:background="@drawable/white_color_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        android:minHeight="46dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="80dp"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="抄送人"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    <TextView
                            android:id="@+id/matter_editor_id_approcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:lines="1"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:drawableRight="@drawable/an_text_right_next"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/paddingleft"
                android:paddingRight="@dimen/paddingright"
                android:id="@+id/matter_editor_biaoqian_layout"
                android:background="@drawable/white_color_selector"
                android:orientation="horizontal"
                android:minHeight="46dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="80dp"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:text="标签"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/matter_editor_biaoqian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:drawableRight="@drawable/an_text_right_next"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            </LinearLayout>
            <!--<LinearLayout-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical"-->
                <!--android:background="@drawable/an_round_bottom_half_normal">-->
            <TextView
                android:id="@+id/matter_editor_height"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:visibility="gone"
                />
           <!--  <com.miicaa.detail.MyGridView
                android:id="@+id/matter_editor_id_att_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_color_selector"
                android:numColumns="auto_fit"
                android:columnWidth="75dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="5dp"
                /> -->
           
			<LinearLayout 
			     android:id="@+id/matter_editor_id_att_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:orientation="vertical"
                android:layout_marginTop="10dp"></LinearLayout>


            <!--</LinearLayout>-->

        </LinearLayout>

    </ScrollView>
</LinearLayout>
