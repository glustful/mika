<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/org_person_list_head_view_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f6f6f6">
        <!--这里的这个layout主要做用是让这个组件充满宽度和高度-->
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <ImageView
            android:id="@+id/org_person_list_head_cell_left_image"
            android:layout_width="17dp"
            android:layout_height="18dp"
            android:contentDescription="选中图标"
            android:src="@drawable/org_person_no_select"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/org_person_list_head_cell_left_head_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="头像图标"
            android:layout_toRightOf="@+id/org_person_list_head_cell_left_image"
            android:src="@drawable/an_user_small_head_img"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/org_person_list_head_cell_right_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:contentDescription="箭头"
            android:src="@drawable/an_right_up"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/org_person_list_head_cell_content_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/org_person_list_head_cell_left_head_image"
            android:contentDescription="head内容"
            android:layout_centerVertical="true"
            android:text="产品部"
            android:textColor="#333333" />

        <Button
            android:id="@+id/org_person_list_head_cell_button"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <Button
            android:id="@+id/org_person_list_head_cell_select_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/org_person_list_head_cell_left_image"
            android:layout_alignRight="@+id/org_person_list_head_cell_content_textview"
            android:background="@android:color/transparent"
            android:focusable="false" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9" />
</LinearLayout>