<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#E6E6E6"
              android:layout_width="match_parent"
              android:layout_height="match_parent">  
    <RelativeLayout
        android:id="@+id/matter_detail_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/an_head_bg"
        android:gravity="top" >
        <RelativeLayout 
       
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">
         
            <Button
           
                android:id="@+id/arrange_plan_id_back"
                style="@style/back_button"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000" />
            
        </RelativeLayout>

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置我的计划"
            android:textSize="@dimen/framText"
            android:textColor="#FFFFFF"/>
        
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="提交"/>

            <Button
                 android:id="@+id/arrange_plan_id_commit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000" />
            
        </RelativeLayout>
        </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/arrange_plan_id_day_layout"
                android:background="@drawable/round_all_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minHeight="46dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全天"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
               <Switch
                   
                   android:id="@+id/arrange_plan_id_day"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/arrange_plan_id_today_layout"
                android:clickable="true"
                android:background="@drawable/round_top_half_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minHeight="42dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            <TextView
                    android:id="@+id/arrange_plan_id_today_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="2013-12-22"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="18sp"/>
            <RelativeLayout
                    android:layout_weight="0"
                    android:layout_width="34dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/arrange_plan_id_today_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_selector"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/arrange_plan_id_tomorrow_layout"
                android:clickable="true"
                android:background="@drawable/round_center_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minHeight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="明天"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            <TextView
                    android:id="@+id/arrange_plan_id_tomorrow_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="2013-12-22"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="18sp"/>
            <RelativeLayout
                    android:layout_weight="0"
                    android:layout_width="34dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/arrange_plan_id_tomorrow_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_selector"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arrange_plan_id_friday_layout"
            android:clickable="true"
            android:background="@drawable/round_center_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周五"
                android:textColor="#333333"
                android:textSize="16sp"/>
        <TextView
                android:id="@+id/arrange_plan_id_friday_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="2013-12-22"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#999999"
                android:textSize="18sp"/>
        <RelativeLayout
                android:layout_weight="0"
                android:layout_width="34dp"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/arrange_plan_id_friday_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/radio_selector"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
                android:id="@+id/arrange_plan_id_next_monday_layout"
                android:clickable="true"
                android:background="@drawable/round_center_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minHeight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下周一"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            <TextView
                    android:id="@+id/arrange_plan_id_next_monday_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="2013-12-22"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="18sp"/>
            <RelativeLayout
                    android:layout_weight="0"
                    android:layout_width="34dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/arrange_plan_id_next_monday_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_selector"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/arrange_plan_id_month_layout"
                android:clickable="true"
                android:background="@drawable/round_center_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minHeight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月底"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            <TextView
                    android:id="@+id/arrange_plan_id_month_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="2013-12-22"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="18sp"/>
            <RelativeLayout
                    android:layout_weight="0"
                    android:layout_width="34dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/arrange_plan_id_month_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_selector"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/arrange_plan_id_other_layout"
                android:clickable="true"
                android:background="@drawable/round_bottom_half_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:minHeight="46dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他时间"
                    android:textColor="#333333"
                    android:textSize="16sp"/>
            <TextView
                    android:id="@+id/arrange_plan_id_other_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="2013-12-22"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="#999999"
                    android:textSize="18sp"/>
            <RelativeLayout
                    android:layout_weight="0"
                    android:layout_width="34dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/arrange_plan_id_other_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/radio_selector"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>