<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80e6e6e6"
   android:orientation="vertical"
    >

    <LinearLayout 
        
           android:paddingBottom="1dp"
         android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/business_file_pop_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
         
            android:gravity="center_horizontal"
           
           
            android:layout_weight="1"
            android:onClick="bnClick"
            android:clickable="true"
            android:layout_marginRight="1dp"
            android:background="@drawable/business_file_all"/>
        <ImageButton 
             android:id="@+id/business_file_pop_doc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:layout_marginRight="1dp"
            android:gravity="center_horizontal"
            
           
            android:layout_weight="1"
            android:onClick="bnClick"
             android:clickable="true"
            android:background="@drawable/business_file_archive"/>
        <ImageButton 
             android:id="@+id/business_file_pop_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            
            android:layout_marginRight="1dp"
            android:gravity="center_horizontal"
            
            android:layout_weight="1"
            android:onClick="bnClick"
             android:clickable="true"
            android:background="@drawable/business_file_pic"/>
        <ImageButton 
             android:id="@+id/business_file_pop_video"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           
            android:gravity="center_horizontal"
          
            android:layout_weight="1"
            android:onClick="bnClick"
             android:clickable="true"
            android:background="@drawable/business_file_video"/>
    </LinearLayout>
 <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        android:background="@color/white"
       >
        <ImageButton 
             android:id="@+id/business_file_pop_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            
            android:gravity="center_horizontal"
            
            android:layout_weight="1"
            android:onClick="bnClick"
             android:clickable="true"
            android:background="@drawable/business_file_star"
            />
        <View 
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
         
        
    </LinearLayout>
</LinearLayout>