<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:padding="10dp"
        android:background="@drawable/white_color_selector"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textColor="@color/red"
        android:layout_marginRight="3dp"/>
    <EditText
        android:id="@+id/ivt_people_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"

        android:hint="姓名"/>
    </LinearLayout>
    <TextView
        android:id="@+id/ivt_people_layout_nameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字提示错误"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:visibility="gone"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/white_color_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/red"
            android:layout_marginRight="3dp"/>
        <EditText
            android:id="@+id/ivt_people_layout_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"

            android:hint="邮箱"/>

        </LinearLayout>
    <TextView
        android:id="@+id/ivt_people_layout_mailError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示错误"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:visibility="invisible"
        />
</LinearLayout>