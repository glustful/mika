<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spacing_horizontal"
    android:paddingRight="@dimen/spacing_horizontal"
    android:paddingTop="5dp"
    >

    <com.miicaa.base.RoundImage.CircularImage
        android:id="@+id/ivIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/spacing_vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/spacing_horizontal"
       android:layout_centerVertical="true"
        android:src="@drawable/an_user_head_large" />

    <com.readystatesoftware.viewbadger.BadgeView
        android:id="@+id/badgeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-4dp"
        android:layout_alignRight="@+id/ivIcon"
        
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTagTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_toLeftOf="@+id/tvTime"
        android:layout_toRightOf="@+id/ivIcon"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/nameTextsize"
        android:text="tvTagTo"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTagTo"
        android:layout_toRightOf="@+id/ivIcon"
        android:textSize="@dimen/contentTextSize"
        android:gravity="center_vertical"
        android:text="tvContent"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        
        android:layout_marginLeft="@dimen/spacing_horizontal"
        android:text="tvTime"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>