<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   
    >
    <LinearLayout 
        android:background="@color/appBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
<RelativeLayout
     android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_weight="1"
  >
    <ImageView
        android:layout_height="30dp"
        android:layout_width="fill_parent"
        android:background="@drawable/contact_list_search_input"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
   
         />
    <ImageView
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/search_ico"

        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/classic_search_text"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="10dp"
       
        android:textSize="14sp"
        android:hint="请输入要搜索的内容"
        android:background="#00000000"
        android:overScrollMode="always" />

    <Button
        android:id="@+id/classic_search_del_view"
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/contact_list_clear_button_selector"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        />
</RelativeLayout>
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginRight="5dp"
     android:layout_marginLeft="5dp"
    android:layout_weight="0">
    <Button
        android:id="@+id/classic_cancel_button"
        android:layout_width="40dp"
        android:layout_height="35dp"
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/save_selector"
      
        android:text="取消"
        
       
        
        />
    </RelativeLayout>
    </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#55e6e6e6"
   
    ></LinearLayout>
</LinearLayout>