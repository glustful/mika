<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miicaa="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/layout_pay_head_view"/>
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                >
                
                 <TextView 
                     android:background="@color/white"
                     android:padding="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>
                
                  <com.miicaa.home.view.LabelEditView_
                      android:id="@+id/customReponser"
                     android:layout_marginTop="3dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="负责人"
                     miicaa:hint=""
                     miicaa:drawableRight="@drawable/an_right_next"
                     miicaa:enable="false"
                     />
                 <com.miicaa.home.view.LabelEditView_ 
                     android:layout_marginTop="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="客户电话"
                     miicaa:gravity="LEFT"
                     miicaa:hint=""/>
                 <com.miicaa.home.view.LabelEditView_ 
                     android:layout_marginTop="3dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="客户QQ"
                     miicaa:gravity="LEFT"
                     miicaa:hint=""/>
                 <com.miicaa.home.view.LabelEditView_ 
                     android:layout_marginTop="3dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="客户邮箱"
                     miicaa:gravity="LEFT"
                     miicaa:hint=""/>
                 <com.miicaa.home.view.LabelEditView_ 
                     android:layout_marginTop="3dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="客户传真"
                     miicaa:gravity="LEFT"
                     miicaa:hint=""/>
                 <com.miicaa.home.view.LabelEditView_ 
                     android:id="@+id/customIndustry"
                     android:layout_marginTop="3dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="所属行业"
                      miicaa:enable="false"
                     miicaa:drawableRight="@drawable/an_right_next"
                     miicaa:hint=""/>
                 <com.miicaa.home.view.LabelEditView_
                      android:id="@+id/addContact"
                     android:layout_marginTop="3dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="所在地区" 
                     miicaa:enable="false"
                     miicaa:drawableRight="@drawable/an_right_next"
                     miicaa:text=""/>
                  <com.miicaa.home.view.LabelEditView_
                      android:id="@+id/addContact"
                     android:layout_marginTop="3dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="联系地址" 
                     miicaa:enable="false"
                     miicaa:drawableRight="@drawable/an_right_next"
                     miicaa:text=""/>
               <com.miicaa.home.view.LabelEditView_
                      android:id="@+id/addContact"
                     android:layout_marginTop="3dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="网址" 
                     miicaa:enable="false"
                     miicaa:drawableRight="@drawable/an_right_next"
                     miicaa:text=""/>
               
                 <com.miicaa.home.view.LabelEditView_
                     android:id="@+id/scanRound"
                     android:layout_marginTop="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     miicaa:label="查看范围" 
                     miicaa:enable="false"
                     miicaa:drawableRight="@drawable/an_right_next"
                     miicaa:text="公开"/>
                  
                  <LinearLayout 
                      android:layout_marginTop="10dp"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      ></LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>