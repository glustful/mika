<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:minHeight="42dp"
        android:orientation="horizontal" >

        <Button
            android:onClick="report"
            android:id="@+id/matter_builder_id_reportday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_color_selector"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/paddingleft"
            android:paddingRight="@dimen/paddingleft"
            android:text="日报"
            android:textColor="#333333"
            android:drawableRight="@drawable/right_next_selector"
            android:drawablePadding="10dp"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:minHeight="42dp"
        android:orientation="horizontal" >

        <Button
            android:onClick="report"
            android:id="@+id/matter_builder_id_reportweek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_color_selector"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/paddingleft"
            android:paddingRight="@dimen/paddingleft"
            android:text="周报"
            android:textColor="#333333"
            android:drawableRight="@drawable/right_next_selector"
            android:drawablePadding="10dp"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:minHeight="42dp"
        android:orientation="horizontal" >

        <Button
            android:onClick="report"
            android:id="@+id/matter_builder_id_reportmonth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_color_selector"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/paddingleft"
            android:paddingRight="@dimen/paddingleft"
            android:text="月报"
            android:textColor="#333333"
            android:drawableRight="@drawable/right_next_selector"
            android:drawablePadding="10dp"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:minHeight="42dp"
        android:orientation="horizontal" >

        <Button
            android:onClick="report"
            android:id="@+id/matter_builder_id_reportcustom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_color_selector"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/paddingleft"
            android:paddingRight="@dimen/paddingleft"
            android:text="自定义报告"
            android:textColor="#333333"
            android:drawableRight="@drawable/right_next_selector"
            android:drawablePadding="10dp"
            android:textSize="16sp" />
    </LinearLayout>
    

</LinearLayout>