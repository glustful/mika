<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_icon_selector"
   android:orientation="horizontal"
   android:padding="@dimen/payPadding"
    >

    
 
        <TextView 
             android:id="@+id/business_file_file_filename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="文件名"
          
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/accessory_file_ico_pdf"
            android:drawablePadding="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="end"
             android:clickable="true"
            android:background="@drawable/white_color_selector"
            />
       
  	<ImageButton 
  	    android:id="@+id/business_file_file_delete"
  	    android:background="@android:color/transparent"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:src="@drawable/an_arrange_person_delete"/>
</LinearLayout>