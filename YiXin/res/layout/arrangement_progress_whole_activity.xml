<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
      
            android:background="@drawable/an_head_bg">
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <Button 
                 android:id="@+id/arragement_progress_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/alittle_white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView 
             android:id="@+id/person_home_id_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查看所有进展"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>
        
        
    </RelativeLayout>
    
    <RelativeLayout
        android:background="#F8F8F7"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1px"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#DDDAD6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/arragement_progress_tab_title1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/arragement_progress_tab_title2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/arragement_progress_tab_title3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/arragement_progress_tab_title4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arragement_progress_tab_line"
            android:layout_width="50dip"
            android:layout_height="4dip"
            android:layout_marginLeft="10dip"
            android:scaleType="matrix"
            android:background="#ffffff"
            android:src = "#0088D6"/>
    </LinearLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/arragement_progress_small_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">
