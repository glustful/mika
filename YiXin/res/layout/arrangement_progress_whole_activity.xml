        <!--<android.support.v4.view.PagerTabStrip-->
            <!--android:id="@+id/arragement_progress_small_tab"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity = "top">-->
