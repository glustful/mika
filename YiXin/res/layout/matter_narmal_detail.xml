<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
     >
      
    <com.miicaa.base.RoundImage.CircularImage
        android:id="@id/head_img"
        android:src="@drawable/an_user_head_large"
        style="@style/manual_userHead"/>
    
    <TextView 
        android:id="@id/head_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head_img"
        android:layout_marginLeft="5dp"
        android:paddingTop="3dp"
        android:textSize="@dimen/nameTextsize"
        android:text="一二三三"
        />
    <ImageView 
        android:id="@+id/approvalState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/matter_small_agree"
        android:visibility="gone"/>
    <LinearLayout 
        android:id="@+id/detailDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/head_name"
        >
         <ImageView 
                android:id="@+id/del"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/matter_del"
                android:visibility="gone"
                />
         <ImageView 
             android:layout_width="wrap_content"
             android:layout_height="10dp"
             android:src="@drawable/vitrcal_line"
             android:layout_marginLeft="5dp"
             android:visibility="gone"/>
        <ImageView 
        android:id="@+id/normalTalk"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:src="@drawable/matter_talk"
        android:layout_marginLeft="5dp"
        
        
        />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/head_name"
        android:layout_below="@id/head_name"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
    <TextView 
        android:id="@android:id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获得的评论内容或者是审批内容或者是动态内容"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <TextView 
             android:id="@+id/time_label"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/detailTextcolor"
        
        android:textSize="@dimen/timesize"
        android:text="审批时间："/>
    <TextView 
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/detailTextcolor"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/timesize"
        android:text=" 2014-10-27 18:00"/>
    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/detailTextcolor"
        android:text="来源: PC"
        android:visibility="gone"/>
    </LinearLayout>
    </LinearLayout>
 

</RelativeLayout>
<ImageView 
    android:id="@+id/horizenLine"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:src="@drawable/dashed_line"/>
</LinearLayout>
