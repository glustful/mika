<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="60dp"
      android:layout_height="90dp">

          <ImageView
              android:id="@+id/pc_dynamic_item_id_top_time_line"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true"
              android:src="@drawable/dynamic_vertical_line"
              android:layout_below="@+id/dynamic_id_circle"
              android:scaleType="fitXY"
              android:contentDescription=""
             />


   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/dynamic_id_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="09:00"
            android:textSize="15sp"
            android:textColor="#777777"/>
        <TextView
            android:id="@+id/dynamic_item_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_id_time"
            android:layout_marginTop="2dp"
            android:text="创建了事务："
            android:textSize="15sp"
            android:textColor="#777777"/>
        <!--
        <TextView
            android:id="@+id/pc_dynamic_item_id_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_id_time"
            android:layout_toRightOf="@+id/dynamic_item_id_title"
            android:layout_marginTop="5dp"
            android:text="完成首页0.2 for Web 的向导验证"
            android:textSize="15sp"
            android:textColor="#1F9272"/>
        -->
        <TextView
            android:id="@+id/dynamic_item_id_lastInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_item_id_title"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:text="加入了云办公"
            android:textSize="15sp"
            android:textColor="#777777"/>

    </RelativeLayout>
</LinearLayout>