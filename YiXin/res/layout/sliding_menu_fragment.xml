<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
    <ImageView 
        android:id="@+id/button_to_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/screen_select"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textColor="#333333"/>
    </RelativeLayout>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vitrcal_line"/>
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    <ImageView 
        android:id="@+id/button_to_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/screen_nomarl"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选"
        android:textSize="20dp"
        android:textColor="#333333"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/sliding_menu_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:alpha="50"
        android:background="@android:color/transparent">
    </LinearLayout>

</LinearLayout>
