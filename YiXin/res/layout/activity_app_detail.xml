<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_vertical"
            android:paddingLeft="@dimen/spacing_horizontal"
            android:paddingRight="@dimen/spacing_horizontal"
            android:paddingTop="@dimen/spacing_vertical" >

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/icon_size_biggest"
                android:layout_height="@dimen/icon_size_biggest"
                android:layout_marginRight="@dimen/spacing_horizontal"
                android:src="@drawable/addfriend_icon_rada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/ivAvatar"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvDisplayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_horizontal"
            android:background="@android:color/white"
            android:shrinkColumns="1"
            android:stretchColumns="1" >

            <TableRow
                android:background="@drawable/list_selector"
                android:clickable="true" >

                <TextView
                    style="@style/contact_detail_table_key"
                    android:text="功能介绍" />

                <TextView
                    style="@style/contact_detail_table_value"
                    android:text="功能介绍" />
            </TableRow>

            <View
                style="@style/divider"
                android:layout_marginLeft="@dimen/spacing_horizontal"
                android:layout_marginRight="@dimen/spacing_horizontal" />

            <TableRow
                android:background="@drawable/list_selector"
                android:clickable="true" >

                <TextView
                    style="@style/contact_detail_table_key"
                    android:text="有信认证" />

                <TextView
                    style="@style/contact_detail_table_value"
                    android:text="认证" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_horizontal"
            android:background="@android:color/white"
            android:shrinkColumns="1"
            android:stretchColumns="1" >

            <TableRow
                android:background="@drawable/list_selector"
                android:clickable="true" >

                <TextView
                    style="@style/contact_detail_table_key"
                    android:text="功能1" />

                <TextView
                    style="@style/contact_detail_table_value"
                    android:text="" />
            </TableRow>

            <View
                style="@style/divider"
                android:layout_marginLeft="@dimen/spacing_horizontal"
                android:layout_marginRight="@dimen/spacing_horizontal" />

            <TableRow
                android:background="@drawable/list_selector"
                android:clickable="true" >

                <TextView
                    style="@style/contact_detail_table_key"
                    android:text="功能2" />

                <TextView
                    style="@style/contact_detail_table_value"
                    android:text="" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>