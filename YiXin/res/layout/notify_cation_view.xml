<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/luncherImageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher"/>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
   <TextView 
       android:id="@+id/notifyContentText"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="测试"
       android:gravity="center"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">
     <RelativeLayout 
         android:id="@+id/notifyProgressLayout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_weight="1">
    <ProgressBar 
        android:id="@+id/notifyProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <TextView 
             android:id="@+id/notifyProgressText"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:text="0%"
             android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/contentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:textColor="@android:color/darker_gray"
        android:text="测试么样"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0"
        />
    </LinearLayout>
    

</LinearLayout>
</LinearLayout>
