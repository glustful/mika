<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sliding_menu_bgcolor"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report_type"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
    <com.miicaa.home.ui.menu.ScrrenViewGroup 
        android:id="@+id/screenViewGroup"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@color/bottom_line_color"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/report_name"
        android:textColor="@android:color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
    
    <TextView
        android:id="@+id/origiatorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/search_edit_bg"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        />
    </LinearLayout>
    <include 
        android:id="@+id/bottomLayout"
        layout="@layout/normal_menudrawmenu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"/>

</LinearLayout>
